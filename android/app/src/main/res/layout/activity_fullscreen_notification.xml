<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E53E3E"
    android:padding="24dp">

    <!-- Alert Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš¨"
        android:textSize="64sp"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Booking Request!"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Body -->
    <TextView
        android:id="@+id/notification_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have a new booking request"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Booking Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer: John Doe"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/work_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: 123 Main Street"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/booking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: Today 2:00 PM"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/booking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking ID: #12345"
            android:textColor="#999999"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="REJECT"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_reject"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ACCEPT"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_accept"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Dismiss Button -->
    <Button
        android:id="@+id/btn_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Dismiss"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_dismiss"
        android:paddingHorizontal="24dp" />

    <!-- Auto-reject timer (optional) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This notification will auto-reject in 30 seconds"
        android:textColor="#FFCCCC"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
